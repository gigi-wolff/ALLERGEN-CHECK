<div><center>
  <div class='form-horizontal col-lg-6 col-lg-offset-3'>

    <%= form_for(@allergen, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.label :category%>
        </div>
        <div class="col-lg-12">
          <%= f.text_field :category, id: "form-input", class: "form-control", placeholder: "Name of Allergen", autofocus: true %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.label :substances%>
        </div>
        <div class="col-lg-12">
          <%= f.text_area :substances, id: "form-textarea", class: "form-control", rows: "10", placeholder: 
"substance 1; substance 2; ...

substance 1
substanc 2..." %>

        </div>
      </div>  
      <br>
        <%= f.submit "Save", class: "btn btn-primary" %>
        <%= link_to "Back to Allergens List", allergens_path, class: "btn btn-xlarge btn-info" %>
    <% end %>
  </div>
</div></center>


